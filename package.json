{
  "name": "ssr-starter-kit",
  "version": "0.0.1",
  "description": "",
  "main": "",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "NODE_ENV=production micro build/index.js",
    "clean": "rm -fr build",
    "build": "npm run clean && npm run build:server && npm run build:client",
    "build:client": "webpack --mode=production",
    "build:server": "ncc build src/server/main.ts -o build",
    "dev": "run-p dev:*",
    "dev:client": "webpack-dev-server",
    "dev:server": "NODE_ENV=development TS_NODE_FILES=true node -r ts-node/register -r tsconfig-paths/register node_modules/.bin/micro-dev src/server/main.ts",
    "deploy": "now",
    "format": "prettier --single-quote --print-width 120 --trailing-comma es5 --write 'src/**/*.{ts,tsx}'",
    "lint-staged": "lint-staged",
    "lint-pass": "echo '\\033[4;32m♡' Awesome! You are ready to commit ♡' \\033[0m'"
  },
  "author": "Marty",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^11.11.7",
    "@zeit/ncc": "^0.17.0",
    "lint-staged": "^8.1.5",
    "micro": "^9.3.3",
    "micro-dev": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "pre-commit": "^1.2.2",
    "prettier": "1.16.4",
    "source-map-loader": "^0.2.4",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.0.3",
    "tsconfig-paths": "^3.8.0",
    "typescript": "^3.3.4000",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.2.1"
  },
  "dependencies": {
    "empty": "^0.10.1",
    "express": "^4.16.4",
    "js-atom": "^0.4.0",
    "js-logger": "^1.6.0",
    "page": "^1.11.4",
    "react": "^16.8.5",
    "react-dom": "^16.8.5"
  },
  "lint-staged": {
    "{src/**/*.{ts,tsx}": [
      "prettier --single-quote --print-width 120 --trailing-comma es5 --write",
      "git add"
    ]
  },
  "pre-commit": [
    "lint-staged",
    "lint-pass"
  ]
}
